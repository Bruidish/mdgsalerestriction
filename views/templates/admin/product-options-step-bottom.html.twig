 <div class="row">
    <div class="col-12">
        <h2>Limitation des ventes</h2>
        {{ form_errors(form) }}

        <div class="row">
            <div class="col-md-4">
                <fieldset class="form-group">
                    <label for="{{ form.limit.vars.id }}" class="form-control-label">
                        {{ form.limit.vars.label }}
                        <span
                        class="help-box"
                        data-toggle="popover"
                        data-content="{{ form.limit.vars.help }}">
                        </span>
                    </label>
                    {{ form_widget(form.limit) }}
                </fieldset>
            </div>
            <div class="col-md-4">
                <fieldset class="form-group">
                    <label for="{{ form.date_from.vars.id }}" class="form-control-label">
                        {{ form.date_from.vars.label }}
                        <span
                        class="help-box"
                        data-toggle="popover"
                        data-content="{{ form.date_from.vars.help }}">
                        </span>
                    </label>
                    {{ form_widget(form.date_from) }}
                </fieldset>
            </div>
            <div class="col-md-4">
                <fieldset class="form-group">
                    <label for="{{ form.date_to.vars.id }}" class="form-control-label">
                        {{ form.date_to.vars.label }}
                        <span
                        class="help-box"
                        data-toggle="popover"
                        data-content="{{ form.date_to.vars.help }}">
                        </span>
                    </label>
                    {{ form_widget(form.date_to) }}
                </fieldset>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <fieldset class="form-group">
                    <label for="{{ form.text_available.vars.id }}" class="form-control-label">{{ form.text_available.vars.label }}</label>
                    {{ form_widget(form.text_available) }}
                </fieldset>
            </div>
            <div class="col-md-6">
                <fieldset class="form-group">
                    <label for="{{ form.text_notavailable.vars.id }}" class="form-control-label">{{ form.text_notavailable.vars.label }}</label>
                    {{ form_widget(form.text_notavailable) }}
                </fieldset>
            </div>
        </div>

    </div>
</div>